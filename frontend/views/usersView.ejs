<section>
<div class="form">
  <form
    action="/api/v1/control/users"
    enctype="application/x-www-form-urlencoded"
    method="post"
    name="sig-in"
    id="sig-in"
  >
    <div>
      <label for="name">Nombre</label>
      <input
        value="test"
        type="text"
        name="name"
        id="name"
        placeholder="Nombre"
        required
      />
    </div>
    <div>
      <label for="lastName">Apellido</label>
      <input
        value="test"
        type="text"
        name="lastName"
        id="lastName"
        placeholder="Apellido"
        required
      />
    </div>
    <div>
      <label for="age">Edad</label>
      <input
        value="12"
        type="number"
        name="age"
        id="age"
        placeholder="Edad"
        required
      />
    </div>
    <div>
      <label for="height">Altura</label>
      <input
        value="12"
        type="number"
        name="height"
        id="height"
        placeholder="Altura"
        required
      />
    </div>
    <div>
      <label for="weight">Peso</label>
      <input
        value="12"
        type="number"
        name="weight"
        id="weight"
        placeholder="Peso"
        required
      />
    </div>
    <div>
      <label for="email">Correo</label>
      <input
        value="test@gmail.com"
        type="email"
        id="email"
        pattern="/^(([^<>()\[\]\\.,;:\s@”]+(\.[^<>()\[\]\\.,;:\s@”]+)*)|(“.+”))@((\[[0–9]{1,3}\.[0–9]{1,3}\.[0–9]{1,3}\.[0–9]{1,3}])|(([a-zA-Z\-0–9]+\.)+[a-zA-Z]{2,}))$/"
        size="30"
        placeholder="Correo"
      />
    </div>
    <div>
      <label for="instalment">Mensualidad</label>
      <input
        value="12"
        type="number"
        name="instalment"
        id="instalment"
        placeholder="Mensualidad"
        required
      />
    </div>
    <div>
      <input type="submit" value="Enviar" />
    </div>
  </form>
</div>
</section>
